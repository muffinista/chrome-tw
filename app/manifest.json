{
  "name": "Tweet Masker",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Mask tweets that have certain words or phrases in them",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "storage",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["styles.css"],
      "js": ["mustache.js", "main.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
